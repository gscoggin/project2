<div section>
  <div class="container">
    <div class="columns is-centered">
      <div class="column">
        <nav class="level">
          <div class="level-item">
            <img src="/styles/images/book-161128_1280.png" alt="Image of Book with Logo CGKP">
            <div id="logo">CG KP</div>
          </div>
          <div class="level-item has-text-centered">
            <h1>{{msg}}</h1>
          </div>
          <div class="level-item has-text-centered">
            <a href="#search-value"><button class="button is-link">Add A Book</button></a>
          </div>
        </nav>
        {{#each books}}
            <div class="box">
              <article class="media">
                <div class="media-left">
                  <figure class="image is-64x64">
                    <img src={{link href=book-cover.url class="bookImg"}} />
                  </figure>
                </div>
                <div class="media-content">
                  <div class="content">
                    <p>
                      <strong>{{this.title}}</strong>
                      <br>
                        {{ trimString this.summary}}
                    </p>

                    </p>
                  </div>
                  <nav class="level is-mobile">
                    <div class="level-left">
                      <a class="level-item" aria-label="like">
                        <span class="icon is-small">
                          <i class="fas fa-heart" aria-hidden="true"></i>
                        </span>
                      </a>
                    </div>
                  </nav>
                </div>
              </article>
            </div>
        {{/each}}

        {{> search_form}}

        <footer class="footer">
          <div class="content has-text-centered">
            <p>
              <a href="">CGKP</a>
            </p>
          </div>
        </footer>
      </div>
    </div>
  </div>
</div>
